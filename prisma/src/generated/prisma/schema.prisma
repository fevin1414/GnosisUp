generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid())
  first_name     String
  last_name      String
  email          String        @unique
  role           String
  authUserId     String        @unique
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  type      OrgType
  size      Int
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

enum Role {
  STUDENT
  TEACHER
  ORGANIZATION_ADMIN
  ENTERPRISE_ADMIN
}

enum OrgType {
  ORGANIZATION
  ENTERPRISE
}
